<% user.posts.forEach(function(post) { %>
    <div class="mainPost">

        <h4><%= post.content %></h4>
        
   

        <a href="/posts/<%=post.id %>/edit">EDIT THIS QUOTE</a>
        <form method="POST" action="/posts/<%= post.id %>/?_method=DELETE">
            <input type="submit" value="DELETE">    
        </form>
      
    </div>
<% }); %>

<div class="cat">

    <h2>List of Categories</h2>
    <% user.categories.forEach(function(category) { %>
        <div>
            <h2 id="category">
                <a href="/category/<%= category.id %>"><%= category.name %></a>
            </h2>
            <form method="POST" action="/category/<%= category.id %>/?_method=DELETE">
                <input type="submit"  value="DELETE">
            </form>
        </div>
    <% }); %>
</div>




